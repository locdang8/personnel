<odoo>
  <data>
  
  <record model="ir.ui.view" id="department_view_tree">
  	<field name="name">Phong ban</field>
  	<field name="model">department.class</field>
  	<field name="arch" type="xml">
  		<tree>
  			<field name="fullname"/>
  			<field name="phone_number"/>
  			<field name="address"/>
  		</tree>
  	</field>
  </record>
  
  <record id="department_view_search" model="ir.ui.view">
  	<field name="name">Department search</field>
  	<field name="model">department.class</field>
  	<field name="arch" type="xml">
  		<search>
  			<field name="address"/>
  			<filter name="fullname" string="Sx theo ten" domain="[('fullname','ilike','tai')]"/>
  			<group expand="1" string="Sap xep theo">
  				<filter name="address_ser" string="ten" context="{'group_by':'address'}"></filter>
  			</group>
  		</search>
  	</field>
  </record>
  <record model="ir.ui.view" id="department_view_form">
  	<field name="name">Phong ban</field>
  	<field name="model">department.class</field>
  	<field name="arch" type="xml">
  		<form>
  			<sheet>
	  				<div class="oe_button_box" name="button_box">
    					<button class="oe_stat_button" type="object" name="action_count_number" icon="fa-user">
        					<field string="Phòng" name="department_count" widget="statinfo"/>
    					</button>
    					<button class="oe_stat_button" type="object" name="action_cout_person" icon="fa-user">
    						<field string="Nhân viên" name="person_count" widget="statinfo"/>
    					</button>
					</div>
					
	  				<notebook>
	  					<page string="Phòng ban">
			  				<group>
					  			<field name="fullname"/>
					  			<field name="phone_number"/>
					  			<field name="address"/>
					  			<field name="person_id"/>					
			  				</group>  						
	  					</page>
	  				</notebook>
  			</sheet>
  		</form>
  	</field>
  </record>

	<record id="department_action" model="ir.actions.act_window">
		<field name="name">Phong ban</field>
		<field name="res_model">department.class</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{'default_search_address':1}</field>
	</record>

	<record id="action_set_department" model="ir.actions.server">
        	<field name="name">Set Department Person</field>
        	<field name="model_id" ref="nhansu.model_department_class"/>
        	<field name="binding_model_id" ref="nhansu.model_department_class"/>
        	<field name="binding_view_types">list,form</field>
        	<field name="state">code</field>
        	<field name="code">
                action=records.create_record()
        	</field>
	</record>

    <!-- Top menu item -->

	<menuitem name="Phong ban" id="menu_pb" parent="menu_root" action="department_action" groups="nhansu.group_department_admin"/>
  </data>
</odoo>